                      <li class="li-especial"><%= "#{i}. " %><%= link_to blog.similar_title, controller: "blogs", action: "show", category: "1k", title: blog.similar_title_alt %><br><span style="font-size:13px; color:#ff5f00;">
                    <% end %>                    
                    <% if @category_name == "United States" or @category_name == "France" or @category_name == "Spain" or @category_name == "Philippines"%>
