                  <% if i.odd? %>
                  <% case @category_name %>
                    <% when "United States" %>
                      <li class="li-especial"><%= "#{i}. " %><%= link_to blog.similar_title, controller: "blogs", action: "show", category: "us", title: blog.similar_title_alt %><br><span style="font-size:13px; color:#ff5f00;">
