                      <% end %>
                    <% end %>
                    </span></li>
                  <% end %>
                <% i += 1
                end %>	
							</ul>
						</div>
					</div>

					
				</div><!-- end col -->

				<div class="col-md-6">
					<div id="map" style="width:100%"><%= link_to image_tag("screenshot/#{@blog.similar_title_alt}.png", alt: "stock-image"), @blog.site_url, target: "_blank" %></div>
				</div>
				<div class="row">
				<div class="col-md-6 wow fadeInUp lista-info">
					<div class="col-md-6">
						<div class="row">
							<ul class="no-list">
								<li><!-- <img src="assets/img/group.png"  class="img-icon" /> -->
                <%= image_tag("group.png", alt: "group", class: "img-icon") %></li>
                <% if @category_name == "United States" or @category_name == "France" or @category_name == "Spain" or @category_name == "Philippines"%>
								  <li style="text-transform: uppercase;"> VISITS FROM <%= @category_name%><br><span style="font-size:30px; color:#7beec7;     font-weight: 700;"><%= @blog.total_traffic_first_country/1000 %>K</span></li>
